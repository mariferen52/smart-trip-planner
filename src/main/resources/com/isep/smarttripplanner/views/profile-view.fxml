<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.isep.smarttripplanner.controller.ProfileController"
            style="-fx-background-color: linear-gradient(from 0% 0% to 0% 100%, #1e5799 0%, #2989d8 25%, #56c1f5 60%, #87CEEB 100%);">
    
    <VBox alignment="CENTER" spacing="20" AnchorPane.topAnchor="25.0" AnchorPane.bottomAnchor="25.0" 
          AnchorPane.leftAnchor="25.0" AnchorPane.rightAnchor="25.0">
        
        <!-- Statistics Header -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="ðŸ“Š" style="-fx-font-size: 60px;"/>
            <Label text="My Statistics" 
                   style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </VBox>
        
        <!-- Stats Cards Row 1 -->
        <HBox alignment="CENTER" spacing="25">
            <!-- Total Trips -->
            <VBox alignment="CENTER" spacing="8" 
                  style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 30; -fx-min-width: 180;">
                <Label text="Total Trips" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                <Label fx:id="totalTripsLabel" text="0" 
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
            
            <!-- Completed -->
            <VBox alignment="CENTER" spacing="8" 
                  style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 30; -fx-min-width: 180;">
                <Label text="Completed" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                <Label fx:id="completedTripsLabel" text="0" 
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #4ade80;"/>
            </VBox>
            
            <!-- Planned -->
            <VBox alignment="CENTER" spacing="8" 
                  style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 30; -fx-min-width: 180;">
                <Label text="Active Status" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                <Label fx:id="plannedTripsLabel" text="0" 
                       style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #fbbf24;"/>
            </VBox>
        </HBox>
        
        <!-- Stats Cards Row 2 -->
        <HBox alignment="CENTER" spacing="25">
            <!-- Budget Spent -->
            <VBox alignment="CENTER" spacing="8" 
                  style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 30; -fx-min-width: 250;">
                <Label text="ðŸ’° Budget Spent" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                <Label fx:id="totalBudgetLabel" text="0.00" 
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
            
            <!-- Destinations Visited -->
            <VBox alignment="CENTER" spacing="8" 
                  style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 20; -fx-padding: 30; -fx-min-width: 250;">
                <Label text="ðŸ“ Destinations" style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.8);"/>
                <Label fx:id="destinationsLabel" text="0" 
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </VBox>
        </HBox>
        
    </VBox>
</AnchorPane>
