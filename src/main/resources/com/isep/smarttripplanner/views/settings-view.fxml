<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.isep.smarttripplanner.controller.SettingsController" style="-fx-padding: 30;">
    
    <Label text="User Settings" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="15" vgap="15" alignment="CENTER">
        <Label text="Home Currency (Wallet):" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <ComboBox fx:id="currencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

        <Label text="Target Currency (Trip):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <ComboBox fx:id="targetCurrencyComboBox" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>
    
    <Button text="Save Settings" onAction="#handleSaveSettings" 
            style="-fx-base: #607d8b; -fx-text-fill: white; -fx-padding: 10 30 10 30;"/>
</VBox>
