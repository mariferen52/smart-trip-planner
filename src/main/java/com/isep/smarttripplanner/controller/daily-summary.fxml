<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" style="-fx-padding: 20;">
    <Label text="Today's Status" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>
    
    <GridPane hgap="20" vgap="20" alignment="CENTER">
        <VBox spacing="5" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 5;" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <Label text="Remaining Budget" style="-fx-font-weight: bold;"/>
            <Label fx:id="todayBalanceLabel" text="$0.00" style="-fx-font-size: 18px;"/>
        </VBox>
        
        <VBox spacing="5" style="-fx-background-color: #f1f8e9; -fx-padding: 15; -fx-background-radius: 5;" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <Label text="Pending Tasks" style="-fx-font-weight: bold;"/>
            <Label fx:id="pendingTasksLabel" text="0" style="-fx-font-size: 18px;"/>
        </VBox>
    </GridPane>

    <Label text="Next Destination (Demo)" style="-fx-font-size: 14px; -fx-text-fill: gray;"/>
</VBox>
